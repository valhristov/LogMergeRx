<Window x:Class="LogMergeRx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogMergeRx"
        d:DataContext="{d:DesignInstance Type=local:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:LevelToForegroundConverter x:Key="LevelToForegroundConverter"
            Error="Red"
            Warning="Orange"
            Info="Black"
            Notice="Black"
            />
    </Window.Resources>
    <Grid x:Name="Root">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="5">
            <ToggleButton Content="Follow Tail" IsChecked="{Binding FollowTail.Value}" Margin="20,0,20,0" />
            <Label Content="Level" FontSize="14" FontWeight="Bold"/>
            <UniformGrid Rows="1" Columns="4">
                <ToggleButton Content="Errors" IsChecked="{Binding ShowErrors.Value}" />
                <ToggleButton Content="Warnings" IsChecked="{Binding ShowWarnings.Value}" Margin="3,0,0,0" />
                <ToggleButton Content="Notices" IsChecked="{Binding ShowNotices.Value}" Margin="3,0,0,0" />
                <ToggleButton Content="Infos" IsChecked="{Binding ShowInfos.Value}" Margin="3,0,0,0" />
            </UniformGrid>
            <Label Content="Include only matching" FontSize="14" FontWeight="Bold"/>
            <TextBox Text="{Binding IncludeRegex.Value, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Exclude matching" FontSize="14" FontWeight="Bold"/>
            <TextBox Text="{Binding ExcludeRegex.Value, UpdateSourceTrigger=PropertyChanged}" />
            <Label Content="Search" FontSize="14" FontWeight="Bold"/>
            <TextBox Text="{Binding SearchRegex.Value, UpdateSourceTrigger=PropertyChanged}" />
            <UniformGrid Rows="1" Columns="2">
                <Button Content="Prev" Command="{Binding PrevIndex}" Margin="0,5,3,0" />
                <Button Content="Next" Command="{Binding NextIndex}" Margin="0,5,0,0" />
            </UniformGrid>
            <Label Content="Loaded files" FontSize="14" FontWeight="Bold"/>
            <ListBox x:Name="AllFiles" ItemsSource="{Binding AllFiles}" SelectionMode="Extended"
                     SelectionChanged="AllFiles_SelectionChanged" Margin="0,5,0,0" />
        </StackPanel>
        <!--NOTE: Since not all items are the same height, setting VirtualizingPanel.ScrollUnit="Pixel"
        greatly reduces the scroll performance -->
        <ItemsControl Grid.Column="1" ItemsSource="{Binding ItemsSource}"
                      VirtualizingPanel.VirtualizationMode="Recycling">
            <ItemsControl.Template>
                <ControlTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Text="Date" />
                        <TextBlock Grid.Column="1" Text="Level" />
                        <TextBlock Grid.Column="2" Text="Message" />
                        <TextBlock Grid.Column="3" Text="File Name" />
                        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="4" CanContentScroll="True" Focusable="False"
                                      HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel
                        local:ScrollHelper.ScrollToIndex="{Binding ScrollToIndex.Value}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Date}" Margin="3" />
                        <TextBlock Grid.Column="1" FontWeight="Bold" Margin="3"
                                   Text="{Binding Level}"
                                   Foreground="{Binding Level, Converter={StaticResource LevelToForegroundConverter}}" />
                        <TextBlock Grid.Column="2" Margin="3"
                                   local:HighlightHelper.Text="{Binding Message}"
                                   local:HighlightHelper.Highlight="{Binding DataContext.SearchRegex.Value, ElementName=Root}"
                                   TextWrapping="Wrap"/>
                        <TextBlock Grid.Column="3" Text="{Binding FileName}" Margin="3" />
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
